{
  "name": "alert-bot-parser",
  "version": "1.0.0",
  "description": "Telegram alert bot parser and analytics dashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "parser": "cd telegram-parser && npm start",
    "parser:dev": "cd telegram-parser && npm run dev",
    "parser:install": "cd telegram-parser && npm install",
    "web": "cd web-app && npm run dev",
    "web:build": "cd web-app && npm run build",
    "web:preview": "cd web-app && npm run preview",
    "web:lint": "cd web-app && npm run lint",
    "web:install": "cd web-app && npm install",
    "install:all": "npm run parser:install && npm run web:install",
    "dev": "concurrently \"npm run parser:dev\" \"npm run web\"",
    "clean": "rm -rf telegram-parser/output/* web-app/dist web-app/build",
    "setup": "npm run install:all && echo 'Setup complete! Copy .env.example to .env in telegram-parser/ and configure your credentials.'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "telegram",
    "parser",
    "analytics",
    "dashboard",
    "react",
    "chartjs"
  ],
  "author": "",
  "license": "MIT"
}